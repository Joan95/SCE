<div class="main">
	<div class="row">
		<div class="col-sm-10">
			<h1 class="title">These are our Items!</h1>
		</div>
	</div>
	<div class="container">
			
		<p><%= link_to "Return to Home Page", root_path %></p>

		<p>Displaying items searched...</p>

		<p> Your current search has been: "<%= params[:search] %>" </p>


		<% if @items.length == 0%>
			<p> Not resoults have been found, try to check the word spelling.</p>
		<% else %>
			<p> Total of resoults found: <%= @items.length %> </p>
			
			<% if user_signed_in? %>
				<% @items.each do |item| %>
					<div class = "Item item polaroid col-sm-2" style="margin-left: 10px; margin-right: 10px; height:550px">
						<%= image_tag item.image, :class => "item" %>
						<div class="container2">
							<h3 class="item"> <%= item.name %> - <%= item.price %>€ </h3>
							<p class="item"> Description: <%= item.description %> </p>
							<p class="item"> Category: <%= item.category %> </p>
							<%= link_to "Add to Cart", {:controller => "cart", :action => :addItem, :id => item.id }, {:method => :post} %></p>
						</div>
					</div>
				<% end %>

			<% else %> 

				<% @items.each do |item| %>
					<div class = "Item item polaroid col-sm-2" style="margin-left: 10px; margin-right: 10px; height:550px">
						<%= image_tag item.image, :class => "item" %>
						<div class="container2">
							<h3 class="item"> <%= item.name %> - <%= item.price %>€ </h3>
							<p class="item"> Description: <%= item.description %> </p>
							<p class="item"> Category: <%= item.category %> </p>
						</div>
					</div>
				<% end %>
			<% end %>
		<% end %>
	</div>
</div>
