<div class="main">
	<div class="row">
		<div class="col-sm-10">
			<h1 class="title">These are all the Users!</h1>
		</div>
	</div>
	
	<% if current_user.isAdmin %>
		<div class="container">
			
			<p><%= link_to "Return to Home Page", root_path %></p>

			<p><h3>Displaying information of <%= @users.length %> users</h3></p>
		
			<% @users.each do |user| %>
				<table>
					<tr>
						<td><p>User Name: </p></td>
						<td><p><%= user.first_name %> <%= user.last_name %></p></td>
					</tr>
					<tr>
						<td><%= button_to "Show User details", { :controller => "users", :action => "seeUser", id: user.id }, { :method => :get, :class => "btn btn-primary", :style => "margin-top:2%" }%></td>
					</tr>
					
				</table>
			<% end %>
		</div>
	<% else %>
		<p>Sorry you are not allowed to see this kind of information.</p>
	<% end %>
</div>
